{
    "configurations": [
    {
        "name": "(gdb) Launch Client",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/lct",
        "args": ["config_1.ini"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },
    {
        "name": "(gdb) Launch Server",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/lct",
        "args": ["config_2.ini"],
